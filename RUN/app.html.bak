<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 3.2//EN">
<HTML>
<HEAD>
<script language="javascript" SRC="../tmInclude/argParse.js"></script>
<script>
	var saveStr = GetCookie("runeSave");
	if (saveStr != null && saveStr != "NOGAME")
	{
		alert("You have a saved game; click on Load to continue it...");
	}

	function loadGame()
	{
		if (confirm("Are you sure you want to abandon this game and load a saved game?") == true)
		{
			var saveStr = GetCookie("runeSave");
			if (saveStr != "NOGAME")
			{
				var rc = parent.app.applet.loadSaveString(saveStr);
				if (rc == true)
				{
					alert("Game successfully loaded");
					var exp = new Date();
					exp.setTime(exp.getTime() + (365*24*60*60*1000));
					SetCookie("runeSave", "NOGAME", exp);
				}
				else
				{
					alert("Problem loading game...");
				}
			}
			else
			{
				alert("No saved game to load...");
			}
		}
	}
	function saveGame()
	{
		var exp = new Date();
		exp.setTime(exp.getTime() + (365*24*60*60*1000));
		var saveString = parent.app.applet.getSaveString();
		if (saveString == "NO")
		{
			alert("Sorry, you can only save your game between rounds.");
		}
		else
		{
			SetCookie("runeSave", saveString, exp);
			alert("Your game has successfully been saved. To continue it, click on Load...");
		}
	}
	function toggle()
	{
		var x = parent.app.applet.toggleBold();
	}
</script>
	<TITLE>ToMar Games - Runes</TITLE>
	<LINK REL=StyleSheet
		HREF="../tmInclude/styles.css"
		TYPE="text/css"
		TITLE="ToMar Style"
		MEDIA="screen">
</HEAD>

